@model List<Message>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
        text-align: center;
    }

    .id {
        text-align: center;
    }

    h1 {
        text-align: center;
        font-size: 50px;
        font-weight: 400;
        margin-bottom: 30px;
    }

    form {
        display: flex;
        justify-content: space-between;
    }

    input {
        padding: 5px;
    }

    button {
        border: 1px solid;
        background-color: #247FF5;
        color: white;
        border-radius: 50%;
        padding: 10px;
        margin: 5px auto;
    }
</style>
<h1>Актуальные сообщения</h1>
<table>
    <thead>
        <tr>
            <th>Номер записи</th>
            <th>Текст сообщения</th>
            <th>Имя пользователя</th>
            <th>Дата</th>
            <th>Ответить на сообщение</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td class="id">@entity.Id</td>
                <td>@entity.Text</td>
                <td>@entity.UserName</td>
                <td>@entity.Date</td>
                <td>
                    <form method="post" action="@Url.Action("MyButton_Click", "AllMessagesFromDatabase")">
                        <input name="inputValue" placeholder="Введите текст">
                        <button type="submit" name="id" value="@entity.MessageId">Отправить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
